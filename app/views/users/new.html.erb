<div>
  <div>
    <h1>Sign Up!</h1>
    <h5>It's quick, easy and free</h5>

    <% if @user.errors.any? %>
      <div 
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for @user do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div>
        <%= f.label :password_confirmation, 'Re-enter password' %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div>
        <%= f.submit 'Sign Up' %>
      </div>

    <% end %>
  </div>
</div>
